{
  "name": "vpn-automation-lambdas",
  "version": "1.0.0",
  "description": "Lambda functions for VPN Cost Automation",
  "scripts": {
    "build": "npm run build:shared && npm run build:functions",
    "build:shared": "cd shared && npm install && tsc",
    "build:functions": "npm run build:slack-handler && npm run build:vpn-control && npm run build:vpn-monitor",
    "build:slack-handler": "cd slack-handler && npm install && tsc",
    "build:vpn-control": "cd vpn-control && npm install && tsc", 
    "build:vpn-monitor": "cd vpn-monitor && npm install && tsc",
    "clean": "find . -name 'node_modules' -type d -exec rm -rf {} + && find . -name '*.js' -type f -delete",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=__tests__/unit",
    "test:integration": "jest --testPathPattern=__tests__/integration",
    "lint": "eslint . --ext .ts"
  },
  "workspaces": [
    "shared",
    "slack-handler", 
    "vpn-control",
    "vpn-monitor"
  ],
  "devDependencies": {
    "typescript": "~4.9.5",
    "@types/jest": "^29.4.0",
    "@types/node": "^18.14.6",
    "jest": "^29.5.0",
    "ts-jest": "^29.0.5",
    "eslint": "^8.36.0",
    "@typescript-eslint/eslint-plugin": "^5.55.0",
    "@typescript-eslint/parser": "^5.55.0"
  },
  "dependencies": {
    "aws-sdk": "^2.1490.0"
  }
}