# Environment Configuration Template
# Copy this file and modify for new environments
# Filename should be: <environment_name>.env

# Environment identification
ENV_NAME=template
ENV_DISPLAY_NAME="Template Environment"
ENV_COLOR=blue
ENV_ICON=ðŸ”µ

# AWS settings - CRITICAL: This determines which AWS account/profile is used
AWS_REGION=ap-northeast-1
AWS_PROFILE=template-vpn-admin
# Alternative profile name mapping (if your AWS profile has a different name)
# ENV_AWS_PROFILE=template

# VPN configuration
VPN_CIDR=172.24.0.0/22
VPN_NAME=Template-VPN
# ENDPOINT_ID will be set automatically when VPN endpoint is created
# ENDPOINT_ID=

# Network settings
PRIMARY_VPC_ID=vpc-template123
PRIMARY_VPC_CIDR=10.2.0.0/16
PRIMARY_SUBNET_ID=subnet-template123

# Directory paths (relative to project root)
CERT_DIR="./certs/template"
CONFIG_DIR="./configs/template"
LOG_DIR="./logs/template"

# Security settings
REQUIRE_MFA_FOR_ADMIN=false
ENABLE_AUDIT_LOGGING=true
REQUIRE_OPERATION_CONFIRMATION=false
