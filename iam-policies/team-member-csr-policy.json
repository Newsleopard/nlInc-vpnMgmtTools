{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "AllowCSRUpload",
            "Effect": "Allow",
            "Action": [
                "s3:PutObject",
                "s3:PutObjectAcl"
            ],
            "Resource": "arn:aws:s3:::vpn-csr-exchange-staging-677089019267/csr/${aws:username}.csr",
            "Condition": {
                "StringEquals": {
                    "s3:x-amz-server-side-encryption": "AES256"
                }
            }
        },
        {
            "Sid": "AllowCertDownload",
            "Effect": "Allow",
            "Action": [
                "s3:GetObject"
            ],
            "Resource": "arn:aws:s3:::vpn-csr-exchange-staging-677089019267/cert/${aws:username}.crt"
        }
    ]
}
